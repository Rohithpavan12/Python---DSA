# Basic Recursion Examples

# Factorial Function
def factorial(n):
    if n == 0 or n == 1:
        return 1
    else:
        return n * factorial(n - 1)

# Fibonacci Function
def fibonacci(n):
    if n <= 0:
        return 0
    elif n == 1:
        return 1
    else:
        return fibonacci(n - 1) + fibonacci(n - 2)

# Power Function
def power(base, exp):
    if exp == 0:
        return 1
    else:
        return base * power(base, exp - 1)

# Sum of Natural Numbers
def sum_natural(n):
    if n <= 0:
        return 0
    else:
        return n + sum_natural(n - 1)

# Example Usage
if __name__ == "__main__":
    print("Factorial of 5:", factorial(5))
    print("Fibonacci of 5:", fibonacci(5))
    print("2 raised to the power 3:", power(2, 3))
    print("Sum of first 5 natural numbers:", sum_natural(5))